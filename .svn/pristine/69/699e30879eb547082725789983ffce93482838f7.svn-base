a {
	text-decoration: none;
}
* {
	margin: 0px;
	padding: 0px;
	font-family: "微软雅黑";
}
.top {
	background: -webkit-linear-gradient(#C10007, #D60008, #C10007);
	/* Safari 5.1 - 6.0 */
	
	background: -o-linear-gradient(#C10007, #D60008, #C10007);
	/* Opera 11.1 - 12.0 */
	
	background: -moz-linear-gradient(#C10007, #D60008, #C10007);
	/* Firefox 3.6 - 15 */
	
	background: linear-gradient(#C10007, #D60008, #C10007);
	
	width: 100%;
	height: 70px;
	filter: progid: DXImageTransform.Microsoft.Shadow(color=#909090, direction=120, strength=3);
				/*ie*/
	-moz-box-shadow: 2px 2px 10px;
				/*firefox*/
	-webkit-box-shadow: 2px 2px 10px;
				/*safari或chrome*/
	box-shadow: -1px 2px 12px;
				/*opera或ie9*/
}
.top-load {
	font-size: 14px;
	position: absolute;
	top: 40px;
	left: 85%;
}
.top-load a {
	color: whitesmoke;
}
.top-load a:hover {
	text-decoration: none;
	color:white;
}
.top-load span {
	color: white;
}
.top-text span {
	position: absolute;
	color: white;
	top: 20px;
	left: 80px;
	font-size: 30px;
	font-family:'仿宋'
}
.nav {
	position: relative;
	top:20px;
	left: 13%;
	background-color: white;
	width: 80%;
	height: 30px;
	margin: 0 auto;
	font-size: 15px;
	z-index: 1;
}
.nav-font{
	font-weight: 600;
}
.nav ul {
	list-style: none;
}
.nav ul li {
	float: left;
	text-align: center;
	position: relative;
	width: 100px;
	line-height: 40px;
}
.nav ul li a {
	text-decoration: none;
	color: dimgray;
	display: block;
}
.nav ul li a:hover {
	color: #D4141C;
	background-color: white;
}
.nav ul li ul {
	position: absolute;
	left: 37px;
	top: 40px;
	display: none;
}
.nav ul li ul li {
	position: relative;
	float: none;
	border-left: none;
	background-color: white;
	left: -55px;
	line-height: 40px;
	width: 130px;
	border-bottom: 2px solid gray;
}
.nav ul li ul li a {
	display: block;
}
.nav ul li ul li a:hover {
	background-color: darkgray;
	color: dimgray
}
