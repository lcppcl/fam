a {
	text-decoration: none;
}
a:hover {
	text-decoration: none;
}
body {
	margin: 0px;
	padding: 0px;
	font-family: "微软雅黑";
}
.top {
	background: -webkit-linear-gradient(#C10007, #D60008, #C10007);
	/* Safari 5.1 - 6.0 */
	
	background: -o-linear-gradient(#C10007, #D60008, #C10007);
	/* Opera 11.1 - 12.0 */
	
	background: -moz-linear-gradient(#C10007, #D60008, #C10007);
	/* Firefox 3.6 - 15 */
	
	background: linear-gradient(#C10007, #D60008, #C10007);
	/* 标准的语法（必须放在最后） */
	
	width: 100%;
	height: 70px;
}
.top-load {
	font-size: 14px;
	position: absolute;
	top: 40px;
	left: 85%;
}
.top-load a {
	color: whitesmoke;
}
.top-load span {
	color: white;
}
.top-text span {
	position: absolute;
	color: white;
	top: 20px;
	left: 80px;
	font-size: 24px;
}
.nav {
	position: relative;
	left: 4%;
	background-color: white;
	width: 80%;
	height: 30px;
	margin: 0 auto;
	font-size: 15px;
	z-index: 1;
}
.nav-font{
	font-weight: bold;
}
.nav ul {
	list-style: none;
}
.nav ul li {
	float: left;
	line-height: 20px;
	text-align: center;
	position: relative;
	width: 100px;
	line-height: 40px;
}
.nav ul li a {
	text-decoration: none;
	color: dimgray;
	display: block;
}
.nav ul li a:hover {
	color: #D4141C;
	background-color: white;
}
.nav ul li ul {
	position: absolute;
	left: 0px;
	top: 40px;
	display: none;
}
.nav ul li ul li {
	position: relative;
	float: none;
	border-left: none;
	background-color: white;
	left: -55px;
	line-height: 40px;
	width: 130px;
	border-bottom: 2px solid gray;
}
.nav ul li ul li a {
	display: block;
}
.nav ul li ul li a:hover {
	background-color: darkgray;
	color: dimgray
}
#myCarousel {
	position: relative;
	width: 83%;
	left: 9%;
}
.about {
	position: absolute;
	top: 90%;
	left: 100px;
	width: 200px;
	height: 150px;
	z-index: 1;
}
.about2 {
	position: absolute;
	top: 90%;
	left: 895px;
	width: 200px;
	height: 150px;
	z-index: 1;
}
.bottom {
	position: absolute;
	top: 120%;
	width: 100%;
	background-color: #D60008;
	height: 20px;
	text-align: center;
}
.bottom span {
	color: white;
	font-size: 12px;
}
.about3 {
	position: absolute;
	top: 90.1%;
	left: 340px;
	width: 550px;
	height: 166px;
	z-index: 1;
	border: 1px solid lightgray;
}
.about3 ul {
	list-style: none;
	padding: 0;
}
.about3 ul li {
	float: left;
	text-align: center;
	position: relative;
	width: 100px;
	line-height: 25px;
}
.about3 ul li a {
	text-decoration: none;
	color: dimgray;
	display: block;
}
.about3 ul li a:hover {
	background-color: #D4141C;
	color: white;
}
.children {
	display: none;
	position: absolute;
	top: 33px;
}